<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:showIn="@layout/activity_main"
    tools:context=".MainActivityFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Relay 1"
            android:id="@+id/button"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@android:color/holo_blue_light" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Relay 2"
            android:id="@+id/button2"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@android:color/holo_blue_light" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Relay 3"
            android:id="@+id/button3"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@android:color/holo_blue_light" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Relay 4"
            android:id="@+id/button4"
            android:layout_row="0"
            android:layout_column="3"
            android:background="@android:color/holo_blue_light" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Relay 5"
            android:id="@+id/button5"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@android:color/holo_blue_light" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Relay 6"
            android:id="@+id/button6"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@android:color/holo_blue_light" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Relay 7"
            android:id="@+id/button7"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@android:color/holo_blue_light" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Relay 8"
            android:id="@+id/button8"
            android:layout_row="1"
            android:layout_column="3"
            android:background="@android:color/holo_blue_light" />

    </LinearLayout>

</RelativeLayout>
